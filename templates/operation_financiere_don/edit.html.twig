
{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="breadcrumb">
					<a href="{{ path('operation_financiere_don_index') }}" class="breadcrumb-item">
						<i class="icon-home2 mr-2"></i>
						Liste des opérations Financière Don
					</a>
					<a href="#" class="breadcrumb-item">
						Modification d'opération Financière Don
					</a>

				</div>
			</div>
		</div>
		<!-- /page header -->
		<div class="grix xs4 container">
			<div class="col-xs4">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="col-12">
					<div class="col-xs4">
						<div class="content-wrapper">

							<div
								class="content">

								<!-- Inner container -->
								<div
									class="d-flex align-items-start flex-column flex-md-row">
									<!-- Left content -->
									<div class="tab-content w-100 overflow-auto order-2 order-md-1">
										<div
											class="tab-pane fade active show" id="settings">
											<!-- Profile info -->
											<div class="card">
												<div class="card-header header-elements-inline">
													<h5 class="card-title">
													Modification d'opération opération Financière Don
													</h5>
													<div class="header-elements"></div>
												</div>

												<div class="card-body"> {{ form_start(form) }}

													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Nom Donataire
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.nomdonataire , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
                                                        <div class="col-md-6">
															<div class="form-group">
																<label>Montant
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.montant , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>
                                                    <div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Mode de paiement
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.modepaiement , {attr:{'class':'form-control form-control-select2'}}) }}
															</div>
														</div>
                                                        <div class="col-md-6">
															<div class="form-group">
																<label>Date
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.date , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>
                                                    <div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>responsable 
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.responsable , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
                                                        <div class="col-md-6">
															<div class="form-group">
																<label>type de caisse
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.caisse , {attr:{'class':'form_control form-control-select2'}}) }}
															</div>
														</div>
													</div>
                                                    <div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Bénéficaire
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.typeadherent , {attr:{'class':'form_control form-control-select2'}}) }}
															</div>
														</div>
                                                        <div class="col-md-6">
															<div class="form-group">
																<label>Stipulation
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.stipulation , {attr:{'class':'form_control form-control-select2'}}) }}
															</div>
														</div>
													</div>
                                                    <div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Etat
																	<span class="text-danger">(juste pour clarification)</span>
																</label> {{ form_widget(form.etat , {attr:{'class':'form-control ','disabled':'disabled'}}) }}
															</div>
														</div>
													</div>
														<div class="text-right"> {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary'}}) }} 
														</div>
                                                    {{ form_end(form) }}
												</div>
												<!-- /profile info -->

											</div>
										</div>
										<!-- /left content -->
									</div>
									<!-- /inner container -->
								</div>
								<!-- Content area -->

								<div class="content"></div>
								<!-- /content area -->
							</div>

						</div>

					</div>
				</div>
			</div>
		</div>
	{% endblock %}
