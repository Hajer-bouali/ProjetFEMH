{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{ path('operation_stock_aide_index') }}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des opérations de stock d'aide
						</a>
						<a href="{{ path('operation_stock_aide_new') }}" class="breadcrumb-item">
							Créer une nouvelle opération de stock d'aide
						</a>
					</div>
				</div>
			</div>
		</div>
		<!-- /page header -->
		<div class="grix xs4 container">
			<div class="col-xs4">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="col-12">
					<div class="col-xs4">
						<div class="content-wrapper">

							<div
								class="content">

								<!-- Inner container -->
								<div
									class="d-flex align-items-start flex-column flex-md-row">
									<!-- Left content -->
									<div class="tab-content w-100 overflow-auto order-2 order-md-1">
										<div class="tab-pane fade active show" id="settings">
											<div class="card">
												<div class="card-header bg-white header-elements-inline">
													<h5 class="card-title">
														Créer une nouvelle opération de stock d'aide
													</h5>
													<div class="card-title-left">
													<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" href="#" data-target="#modal_ajout_evenement" data-toggle="modal">
														<b>
															<i class="icon-calendar3"></i>
														</b>
														Ajouter un nouvel évènement</a>
												</div>
												</div>

												<div class="card-body"> {{ form_start(formAide) }}

													<div class="row">

														<div class="col-md-6">
															<div class="form-group">
																<label>évènement
																	<span class="text-danger"></span>
																</label> {{ form_widget(formAide.evenement, {attr:{'class':'form-control form-control-select2'}}) }}
															</div>
														</div>
													</div>
													<div class="text-right"> {{ form_row(formAide.Enregistrer , {attr:{'class':'btn btn-primary'}}) }}
													</div> {{ form_end(formAide) }}

													<!-- Vertical form modal -->
													<div id="modal_ajout_evenement" class="modal fade" tabindex="-1">
														<div class="modal-dialog">
															<div class="modal-content">
																<div class="modal-header">
																	<h5 class="modal-title">Vous allez ajouter un nouvel évènement<h5>
																			<button type="button" class="close" data-dismiss="modal">&times;</button>
																		</div>
																		<div class="card-body">{{ form_start(formEvenement) }}

																			<div class="row">
																				<div class="col-md-6">
																					<div class="form-group">
																						<label>Nom
																							<span class="text-danger">*</span>
																						</label> {{ form_widget(formEvenement.nom , {attr:{'class':'form-control','placeholder':'Nom'}}) }}
																					</div>
																				</div>

																				<div class="col-md-6">
																					<div class="form-group">
																						<label>Type d'évènement
																							<span class="text-danger">*</span>
																						</label> {{ form_widget(formEvenement.typeEvenement , {attr:{'class':'form-control '}}) }}
																					</div>
																				</div>
																			</div>
																			<div class="row">
																				<div class="col-md-6">
																					<div class="form-group">

																						<label>Date début<span class="text-danger">*</span>


																						</label> {{ form_widget(formEvenement.datedebut , {attr:{'class':'form-control'}}) }}

																					</div>
																				</div>

																				<div class="col-md-6">
																					<div class="form-group">
																						<label>Date fin
																							<span class="text-danger">*</span>
																						</label> {{ form_widget(formEvenement.datefin , {attr:{'class':'form-control'}}) }}
																					</div>
																				</div>
																			</div>
																			<div class="row">
																				<div class="col-md-6">
																					<div class="form-group">

																						<label>Adhérent<span class="text-danger">*</span>


																						</label> {{ form_widget(formEvenement.adherent , {attr:{'class':'form-control form-control-select2'}}) }}

																					</div>
																				</div>
																				{% if is_granted('ROLE_SOCIAL') %}
																				<div class="col-md-6">
																					<div class="form-group">
																						<label>Etat
																							<span class="text-danger">*</span>
																						</label> {{ form_widget(formEvenement.etat , {attr:{'class':'form-control'}}) }}
																					</div>
																				</div>
																			{% endif %}
																			</div>

																			<div class="text-right"> {{ form_row(formEvenement.Enregistrer , {attr:{'class':'btn btn-primary'}}) }} {{ form_end(formEvenement) }}
																			</div>
																		</div>
																	</div>
																</div>
																<!-- /vertical form modal -->
															</div>
														</div>
														<!-- /profile info -->

													</div>
													<!-- Profile info -->

													<!-- /left content -->
												</div>
												<!-- /inner container -->
											</div>
											<!-- Content area -->

											<div class="content"></div>
											<!-- /content area -->
										</div>

									</div>

								</div>
							</div>
						</div>
					</div>
				{% endblock %}
				{% block javascript %}
					<script type="text/javascript">
						$(document).ready(function () {

$('#operation_stock_aide_stipulation').on('select2:select', function (e) {
if ($(this).val() === 'Zakat') {
$('#champ_date').removeClass('d-none');
} else {
$('#champ_date').addClass('d-none');
}
});
});
					</script>
				{% endblock %}
