
{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{path('caisse_index')}}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des caisses</a>

					</div>

					<a href="#" class="header-elements-toggle text-default d-md-none">
						<i class="icon-more"></i>
					</a>
				</div>


			</div>
		</div>
		<!-- /page header -->


		<!-- Content area -->
		<div
			class="content">

			<!-- Basic datatable -->
			<div class="card">
				<div class="card-header header-elements-inline">
					<h5 class="card-title">Liste des caisses</h5>
					<div class="card-title-left">
						<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" href="{{path('caisse_new')}}">
							<b>
								<i class="icon-cart-add2"></i>
							</b>
							Ajouter une nouvelle caisse</a>
					</div>

				</div>

				<table class="table datatable-basic">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Intitulé</th>
                        <th>Montant</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for caisse in caisses|reverse  %}
                    <tr>
                        <td>{{ caisse.id }}</td>
                        <td>{{ caisse.intitule }}</td>
                        <td>{{ caisse.montant }}</td>
                            <td>
									<div class="list-icons">
										<a class="list-icons-item text-primary-600" data-popup="tooltip-custom" title="Modifier la caisse"  href="{{ path('caisse_edit', {'id': caisse.id}) }}">
											<i class="icon-pencil7"></i>
										</a>
										<a href="#" data-target="#modal_delete{{caisse.id}}" data-toggle="modal" data-popup="tooltip-custom" title="Supprimer la caisse"  data-id={{caisse.id}} class="list-icons-item text-danger-600">
											<i class="icon-trash"></i>
										</a>
										<a href="{{ path('caisse_show', {'id': caisse.id}) }}" data-popup="tooltip-custom" title="Afficher la caisse"  class="list-icons-item text-teal-600">
											<i class="icon-reading"></i>
										</a>
									</div>
								</td>
                            <td></td>
                            <td class="text-center"></td>
							</tr>
							<div id="modal_delete{{caisse.id}}" class="modal fade" tabindex="-1">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header bg-danger">
										<h6 class="modal-title">Supprimer la caisse {{caisse.intitule}}</h6>
										<button type="button" class="close" data-dismiss="modal">&times;</button>
									</div>

									<div class="modal-body">
										<p>Êtes-vous sûr de vouloir supprimer ?</p>
									</div>

									<div class="modal-footer">
										<button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
										<a type="button" class="btn bg-danger" href="{{path("caisse_delete" , {id: caisse.id})}}">Valider</a>
									</div>
								</div>
							</div>
						</div>
						{% endfor %}
					</tbody>
				</table>
				<!-- /basic datatable -->
			</div>

		</div>
	</div>
{% endblock %}
