{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{ path('revenufamilial_index') }}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des revenu familial
						</a>
						<a href="#" class="breadcrumb-item">
							Modifier le revenu familial
						</a>
					</div>
				</div>
			</div>
		</div>
		<!-- /page header -->
		<div class="grix xs4 container">
			<div class="col-xs4">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="col-12">
					<div class="col-xs4">
						<div class="content-wrapper">

							<div
								class="content">

								<!-- Inner container -->
								<div
									class="d-flex align-items-start flex-column flex-md-row">
									<!-- Left content -->
									<div class="tab-content w-100 overflow-auto order-2 order-md-1">
										<div
											class="tab-pane fade active show" id="settings">
											<!-- Profile info -->
											<div class="card">
												<div class="card-header bg-white header-elements-inline">
													<h5 class="card-title">
														Modifier le revenu familial
													</h5>
													<div class="header-elements"></div>
												</div>

												<div class="card-body">{{ form_start(form) }}
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Bénéficiaire
																</label>
																<span class="text-danger">*</span> {{ form_widget(form.benificiaire , {attr:{'class':'form-control'}}) }}
															</div>
														</div>

														<div class="col-md-6">
															<div class="form-group">
																<label>Affaires sociales
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.affairessociales , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Type carte
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.typecarte , {attr:{'class':'form-control  '}}) }}
															</div>
														</div>

														<div class="col-md-6">
															<div class="form-group">
																<label>Numéro d'inscription
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.numinscription , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>

													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Régime sécurité sociale
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.regimesecuritesociale , {attr:{'class':'form-input-styled '}}) }}
															</div>
														</div>
														<div class="col-md-6">
															<div class="form-group">
																<label>Type régime sécurité sociale
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.typeregimesecuritesociale , {attr:{'class':'form-input-styled '}}) }}
															</div>
														</div>
													</div>
													<div class="text-right"> {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary'}}) }}
													</div> {{ form_end(form) }}
												</div>
											</div>
											<!-- /left content -->
										</div>
										<!-- /inner container -->
									</div>
									<!-- Content area -->

									<div class="content"></div>
									<!-- /content area -->
								</div>

							</div>

						</div>
					</div>
				</div>
			</div>
		{% endblock %}
