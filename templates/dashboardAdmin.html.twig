{% extends 'base.html.twig' %}

{% block title %}
	Liste des adherents
{% endblock %}


{% block body %}
	<!-- Main content -->
	<div class="content-wrapper">
		<div class="card">
			<div class="card-header header-elements-inline">
				<h5>
					<i class="icon-arrow-left52 mr-2"></i>
					<span class="font-weight-semibold">Page</span>
					- Modifier l'événement
					<small class="d-block text-muted">pour l'événement</small>
				</h5>
				<div class="card-title-left">
						<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" href="dashboard_Admin_Financier">
							<b>
								<i class="icon-reading"></i>
							</b>
							Ajouter un nouveau événement</a>
					</div>
				<div class="header-elements">
					<div class="list-icons">
						<a class="list-icons-item" data-action="collapse"></a>
						<a class="list-icons-item" data-action="reload"></a>
						<a class="list-icons-item" data-action="remove"></a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<ul class="nav nav-tabs nav-tabs-highlight justify-content-end">
					<li class="nav-item">
						<a href="dashboard_Admin_Financier" class="nav-link legitRipple" data-toggle="tab">
							<i class="icon-graph">
								Active
							</i>
						</a>
					</li>
					<li class="nav-item">
						<a href="dashboard_Admin_Social" class="nav-link legitRipple active show" data-toggle="tab">
							<i class="icon-bars-alt ">
								<span>
									Inactive
								</span>
							</i>
						</a>
					</li>
				</ul>

				<div class="tab-content">
					{% block statistique %}{% endblock %}
				</div>
			</div>
		</div>
		<!-- Content area -->
	</div>
</div>{% endblock %}
