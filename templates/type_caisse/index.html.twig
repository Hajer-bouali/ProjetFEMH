
{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{path('type_caisse_index')}}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des types de caisse</a>

					</div>

					<a href="#" class="header-elements-toggle text-default d-md-none">
						<i class="icon-more"></i>
					</a>
				</div>


			</div>
		</div>
		<!-- /page header -->


		<!-- Content area -->
		<div
			class="content">

			<!-- Basic datatable -->
			<div class="card">
				<div class="card-header header-elements-inline">
					<h5 class="card-title">Liste de type de caisse</h5>
					<div class="card-title-left">
						<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" href="{{path('type_caisse_new')}}">
							<b>
								<i class="icon-reading"></i>
							</b>
							Ajouter un type de caisse</a>
					</div>

				</div>

				<table class="table datatable-basic">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Nom</th>	
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for type_caisse in type_caisses|reverse  %}
						<tr class="text-center">
                        <td>{{ type_caisse.id }}</td>
                        <td>{{ type_caisse.nom }}</td>
							
                            <td>

								<a class="list-icons-item text-primary-600" data-popup="tooltip-custom" title="Modifier le type de caisse"  href="{{ path('type_caisse_edit', {'id': type_caisse.id}) }}">
									<i class="icon-pencil7"></i>
								</a>
								<a href="#" data-target="#modal_delete{{type_caisse.id}}" data-toggle="modal" data-popup="tooltip-custom" title="Supprimer le type de caisse"  data-id={{type_caisse.id}} class="list-icons-item text-danger-600">
									<i class="icon-trash"></i>
								</a>
								<div id="modal_delete{{type_caisse.id}}" class="modal fade" tabindex="-1">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header bg-danger">
												<h6 class="modal-title">Supprimer le type de caisse {{type_caisse.id}}</h6>
												<button type="button" class="close" data-dismiss="modal">&times;</button>
											</div>

											<div class="modal-body">
												<p>Êtes-vous sûr de vouloir supprimer ?</p>
											</div>

											<div class="modal-footer">
												<button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
												<a type="button" class="btn bg-danger" href="{{path("type_caisse_delete" , {id: type_caisse.id})}}">Valider</a>
											</div>
										</div>
									</div>
								</div>
							</td>
						<td ></td>
						<td ></td>	
                        <td class="text-center"></td>
						</tr>

					{% endfor %}
				</tbody>
			</table>
			<!-- /basic datatable -->
		</div>

	</div>
</div>{% endblock %}
