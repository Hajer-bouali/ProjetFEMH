{% extends 'base.html.twig' %}

{% block title %}affichage de produit
	{{ produit.id }}
{% endblock %}

{% block body %}
<!--commantaire-->
	<div class="grix xs4 container">
		<div class="col-xs4">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="col-12">
				<div class="col-xs4">
					<div class="content-wrapper">

						<div
							class="content">

							<!-- Inner container -->
							<div
								class="d-flex align-items-start flex-column flex-md-row">
								<!-- Left content -->
								<div class="tab-content w-100 overflow-auto order-2 order-md-1">
									<div
										class="tab-pane fade active show" id="settings">
										<!-- Produit info -->
										<div class="card">
										<div class="card-header header-elements-inline">
												<h5 class=" text-teal text-center ">L'affichage de produit
													{{ produit.id }}</h5>
											</div>
											<div class="card-body">
												
												<div class="form-group">
													<div class="row">
													
														<div class="col-md-6">
															<div class="d-flex align-items-center">
																<i class="icon-calendar mr-3 icon-2x"></i>
																<div class="font-weight-black">Date d'expiration  :</div>
																<samp class="font-size-lg">{{ produit.dateExpiration ? produit.dateExpiration|date('Y-m-d H:i:s') : '' }}</samp>
															</div>
														</div>
														<div class="col-md-6">
															<div class="d-flex align-items-center">
																<i class="icon-database-check mr-3 icon-2x"></i>
																<div class="font-weight-black">La quantité :</div>
																<samp class="font-size-lg">{{ produit.quantite }}</samp>

															</div>
														</div>
													</div>

												</div>
												<div class="form-group">
													<div class="row">
														<div class="col-md-6">
															<div class="d-flex align-items-center">
																<i class="icon-cabinet mr-3 icon-2x"></i>
																<div class="font-weight-black">Categorie :</div>
																<samp class="font-size-lg">{{ produit.categorie }}</samp>
															</div>
														</div>
														<div class="col-md-6">
															<div class="d-flex align-items-center">
																<i class="icon-bookmark2 mr-3 icon-2x"></i>
																<div class="font-weight-black">référence:</div>
																<samp class="font-size-lg">{{ produit.ref }}</samp>

															</div>
														</div>
													</div>

												</div>
												
											</div>
											<!-- /Produit info -->
										</div>
									</div>
									<!-- /left content -->


									<!-- Right sidebar component -->
									<div
										class="sidebar sidebar-light bg-transparent sidebar-component sidebar-component-right wmin-300 border-0 shadow-0 order-1 order-md-2 sidebar-expand-md">

										<!-- Sidebar content -->
										<div class="sidebar-content"></div>
										<!-- /sidebar content -->
									</div>
									<!-- /right sidebar component -->
								</div>
								<!-- /inner container -->
							</div>
							<!-- Content area -->
							<div class="content"></div>
							<!-- /content area -->
						</div>


					</div>

				</div>
			{% endblock %}
