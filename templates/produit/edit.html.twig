{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{path('produit_index')}}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des produits</a>
						<a href="#" class="breadcrumb-item">Modification de produit</a>
					</div>
				</div>
			</div>
		</div>
		<!-- /page header -->
		<div class="grix xs4 container">
			<div class="col-xs4">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="col-12">
					<div class="col-xs4">
						<div class="content-wrapper">

							<div
								class="content">

								<!-- Inner container -->
								<div
									class="d-flex align-items-start flex-column flex-md-row">
									<!-- Left content -->
									<div class="tab-content w-100 overflow-auto order-2 order-md-1">
										<div
											class="tab-pane fade active show" id="settings">
											<!-- Profile info -->
											<div class="card">
												<div class="card-header bg-white header-elements-inline">
													<h5 class="card-title">Modifier le produit {{produit.id}}</h5>
													<div class="header-elements"></div>
												</div>

												<div class="card-body"> {{ form_start(form) }}

													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>intitulé
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.intitule, {attr:{'class':'form-control'}}) }}
															</div>
														</div>
														<div class="col-md-6">
															<div class="form-group">
																<label>
																	le type de produit<span class="text-danger">*</span>
																</label>
																<select name="listeTypeProduit[]" class="form-control form-control-select2">
																	{% for typeProduit in typeProduits %}
																		<option value="{{ typeProduit.id }}"> {{ typeProduit.nom }}
																		</option>
																	{% endfor %}
																</select>
															</div>
														</div>

													</div>
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Quantité
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.quantite  , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
														<div class="col-md-6">
															<div class="form-group">
																<label>Unité
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.unite  , {attr:{'class':'form-control form-control-select2'}}) }}
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Référence
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.ref , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
														<div class="col-md-6">
															<div class="form-group">
																<label>Date d'expiration
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.dateExpiration , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>

													<div class="text-right"> {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary'}}) }} {{ form_end(form) }}
													</div>

												</div>
											</div>
											<!-- /profile info -->

										</div>
									</div>
									<!-- /left content -->
								</div>
								<!-- /inner container -->
							</div>
							<!-- Content area -->
							<div class="content"></div>
							<!-- /content area -->
						</div>


					</div>

				</div>
			</div>
		{% endblock %}
