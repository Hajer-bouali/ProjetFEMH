{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{path('operation_financiere_aide_index')}}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des opérations Financière Don</a>

					</div>

					<a href="#" class="header-elements-toggle text-default d-md-none">
						<i class="icon-more"></i>
					</a>
				</div>


			</div>
		</div>
		<!-- /page header -->


		<!-- Content area -->
		<div
			class="content">

			<!-- Basic datatable -->
			<div class="card">
				<div class="card-header header-elements-inline">
					<h5 class="card-title">Liste des opérations Financière d'aide</h5>
					<div class="card-title-left">
						<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" href="{{path('operation_financiere_aide_new')}}">
							<b>
								<i class="icon-diff-removed"></i>
							</b>
							Ajouter une nouvelle opération Financière </a>
					</div>

				</div>

				<table class="table datatable-basic">
					<thead>
						<tr>
							<th>Id</th>
							<th>Montant</th>
							<th>Caisse</th>
							<th>Evénement</th>
							<th>Responsable</th>	
							<th>Etat</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for operation_financiere in operation_financieres|reverse  %}
							<tr>
								<td>{{ operation_financiere.id }}</td>
								<td>{{ operation_financiere.montant }}</td>
								<td>{{ operation_financiere.caisse }}</td>
								<td>{{ operation_financiere.evenement }}</td>
								<td>{{ operation_financiere.Responsable }}</td>
								<td>{{ operation_financiere.etat }}</td>
								<td>
									<a class="list-icons-item text-primary-600" href="{{ path('operation_financiere_aide_edit', {'id': operation_financiere.id}) }}">
										<i class="icon-pencil7"></i>
									</a>
									<a href="#" data-target="#modal_delete{{operation_financiere.id}}" data-toggle="modal" data-id={{operation_financiere.id}} class="list-icons-item text-danger-600">
										<i class="icon-trash"></i>
									</a>
									<a href="{{ path('operation_financiere_aide_show', {'id': operation_financiere.id}) }}" class="list-icons-item text-teal-600">
										<i class="icon-reading"></i>
									</a>
									<div id="modal_delete{{operation_financiere.id}}" class="modal fade" tabindex="-1">
										<div class="modal-dialog">
											<div class="modal-content">
												<div class="modal-header bg-danger">
													<h6 class="modal-title">Supprimer L'opération Financière Don {{operation_financiere.id}}</h6>
													<button type="button" class="close" data-dismiss="modal">&times;</button>
												</div>

												<div class="modal-body">
													<p>Êtes-vous sûr de vouloir supprimer ?</p>
												</div>

												<div class="modal-footer">
													<button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
													<a type="button" class="btn bg-danger" href="{{path("operation_financiere_aide_delete" , {id: operation_financiere.id})}}">Valider</a>
												</div>
											</div>
										</div>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<!-- /basic datatable -->
			</div>

		</div>
	</div>
{% endblock %}
