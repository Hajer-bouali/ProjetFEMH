{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="breadcrumb">
					<a href="{{ path('operation_financiere_aide_index') }}" class="breadcrumb-item">
						<i class="icon-home2 mr-2"></i>
						Liste des opérations Financière d'aide
					</a>
					<a href="{{ path('operation_financiere_aide_new') }}" class="breadcrumb-item">
						Créer une nouvelle opération Financière d'aide
					</a>

				</div>
			</div>
		</div>
		<!-- /page header -->
		<div class="grix xs4 container">
			<div class="col-xs4">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="col-12">
					<div class="col-xs4">
						<div class="content-wrapper">

							<div
								class="content">

								<!-- Inner container -->
								<div
									class="d-flex align-items-start flex-column flex-md-row">
									<!-- Left content -->
									<div class="tab-content w-100 overflow-auto order-2 order-md-1">
										<div
											class="tab-pane fade active show" id="settings">
											<!-- Profile info -->
											<div class="card">
												<div class="card-header header-elements-inline">
													<h5 class="card-title">
														Créer une nouvelle opération Financière d'aide
													</h5>
													<div class="header-elements"></div>
												</div>

												<div class="card-body"> {{ form_start(form) }}

													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Montant
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.operation.montant , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
														<div class="col-md-6">
															<div class="form-group">
																<label>Mode de paiement
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.operation.modepaiement , {attr:{'class':'form-control form-control-select2'}}) }}
															</div>
														</div>
													</div>
													<div class="row">
														{% if is_granted('ROLE_FINANCIERE') %}
															<div class="col-md-6">
																<div class="form-group">
																	<label>Etat
																		<span class="text-danger">(juste pour clarification)</span>
																	</label> {{ form_widget(form.operation.etat , {attr:{'class':'form-control '}}) }}
																</div>
															</div>
														{% endif %}
														<div class="col-md-6">
															<div class="form-group">
																<label>Evénement
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.operation.evenement , {attr:{'class':'form-control form-control-select2'}}) }}
															</div>
														</div>
													</div>
													<div class="text-right"> {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary'}}) }}
													</div> {{ form_end(form) }}
												</div>
												<!-- /profile info -->

											</div>
										</div>
										<!-- /left content -->
									</div>
									<!-- /inner container -->
								</div>
								<!-- Content area -->

								<div class="content"></div>
								<!-- /content area -->
							</div>

						</div>

					</div>
				</div>
			</div>
		</div>
	{% endblock %}
