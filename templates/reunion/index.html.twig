{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{path('reunion_index')}}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des réunions</a>

					</div>

					<a href="#" class="header-elements-toggle text-default d-md-none">
						<i class="icon-more"></i>
					</a>
				</div>


			</div>
		</div>
		<!-- /page header -->


		<!-- Content area -->
		<div
			class="content">

			<!-- Basic datatable -->
			<div class="card">
				<div class="card-header header-elements-inline">
					<h5 class="card-title">Liste des réunions</h5>
					<div class="card-title-left">
						<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" href="{{path('reunion_create')}}">
							<b>
								<i class="icon-reading"></i>
							</b>
							Ajouter une nouvelle réunion</a>
					</div>

				</div>

				<table class="table datatable-basic ">

					<thead>
						<tr>

							<th>Id</th>
							<th>Date</th>
							<th>Membres</th>
							<th>Actions</th>

						</tr>
					</thead>
					<tbody>
						{% for reunion in reunions|reverse  %}
							<tr>

								<td>{{ reunion.id }}</td>
								<td>{{ reunion.date ? reunion.date|date('Y-m-d') : '' }}</td>
								<td>{{ reunion.listemembre}}</td>
								<td>

									<a class="list-icons-item text-primary-600" data-popup="tooltip-custom" title="Modifier le réunion" data-popup="tooltip-custom" title="Modifier la réunion" href="{{ path('reunion_edit', {'id': reunion.id}) }}">
										<i class="icon-pencil7"></i>
									</a>
									<a href="#" data-target="#modal_delete{{reunion.id}}" data-popup="tooltip-custom" title="Supprimer le réunion" data-popup="tooltip-custom" title="Supprimer la réunion"  data-toggle="modal" data-id={{reunion.id}} class="list-icons-item text-danger-600">
										<i class="icon-trash"></i>
									</a>
									<a href="{{ path('reunion_show', {'id': reunion.id}) }}" data-popup="tooltip-custom" title="Prendre une décision Concernant les dossier"  class="list-icons-item text-teal-600">
										<i class="icon-reading"></i>
									</a>


								</td>
								<div id="modal_delete{{reunion.id}}" class="modal fade" tabindex="-1">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header bg-danger">
												<h6 class="modal-title">Supprimer le reunion {{reunion.id}}</h6>
												<button type="button" class="close" data-dismiss="modal">&times;</button>
											</div>

											<div class="modal-body">
												<p>Êtes-vous sûr de vouloir supprimer ?</p>
											</div>

											<div class="modal-footer">
												<button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
												<a type="button" class="btn bg-danger" href="{{path("reunion_delete" , {id: reunion.id})}}">Valider</a>
											</div>
										</div>
									</div>
								</div>
								<td></td>
								<td class="text-center"></td>
							</tr>

						{% endfor %}
					</tbody>
				</table>
				<!-- /basic datatable -->
			</div>

		</div>
	</div>
{% endblock %}



