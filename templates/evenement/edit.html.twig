{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="breadcrumb">
					<a href="{{ path('evenement_index') }}" class="breadcrumb-item">
						<i class="icon-home2 mr-2"></i>
						Liste des evenements
					</a>

				</div>
			</div>
		</div>
		<!-- /page header -->
		<div class="grix xs4 container">
			<div class="col-xs4">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="col-12">
					<div class="col-xs4">
						<div class="content-wrapper">

							<div
								class="content">

								<!-- Inner container -->
								<div
									class="d-flex align-items-start flex-column flex-md-row">
									<!-- Left content -->
									<div class="tab-content w-100 overflow-auto order-2 order-md-1">
										<div
											class="tab-pane fade active show" id="settings">
											<!-- Profile info -->
											<div class="card">
												<div class="card-header bg-white header-elements-inline">
													<h6 class="card-title">Créer un nouveau événement</h6>
													<div class="header-elements"></div>
												</div> {{ form_start(form , {attr:{'class':'wizard-form steps-validation'}}) }}
												<h6>Créer un nouveau evenement</h6>
												<fieldset>
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Nom
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.nom , {attr:{'class':'form-control','placeholder':'Nom'}}) }}
															</div>
														</div>

														<div class="col-md-6">
															<div class="form-group">
																<label>Type d'événement
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.typeEvenement , {attr:{'class':'form-control form-control-select2'}}) }}
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Date début<span class="text-danger">*</span>
																</label> {{ form_widget(form.datedebut , {attr:{'class':'form-control'}}) }}

															</div>
														</div>

														<div class="col-md-6">
															<div class="form-group">
																<label>Date fin
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.datefin , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Le montant<span class="text-danger">*</span>
																</label> {{ form_widget(form.montantunitaire , {attr:{'class':'form-control'}}) }}

															</div>
														</div>
													</div>

												</fieldset>
												<h6>Créer son fiche technique</h6>
												<fieldset>
													<div class="title-right">
														<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" data-target="#modal_ajout_produit" data-toggle="modal">
															<b>
																<i class="icon-reading"></i>
															</b>
															Ajouter un nouveau produit
														</a>
													</div>
													<table class="table datatable-basic">

														<thead>
															<tr>
																<th>
																	Id

																</th>
																<th>
																	produit
																</th>
																<th>
																	Quantité
																</th>
																<th>
																	Unite
																</th>
																<th>
																	Nombre panier
																</th>
																<th>
																	Actions

																</th>
															</tr>
														</thead>
														<tbody>
															{% for ficheTechnique in ficheTechniques %}
																<tr>
																	<td> {{ ficheTechnique.id }}
																	</td>
																	<td> {{ ficheTechnique.produit.intitule }}
																	</td>
																	<td> {{ ficheTechnique.quantite }}
																	</td>
																	<td> {{ ficheTechnique.unite }}
																	</td>
																	<td> {{ ficheTechnique.nbstockproduit }}
																	</td>
																	<td>
																		<div
																			class="list-icons">
																			<!--bouton trach-->
																			<a href="#" class="list-icons-item text-danger-600" data-target="#modal_delete{{ ficheTechnique.id }}" data-toggle="modal">
																				<i class="icon-trash"></i>
																			</a>
																			<!--/bouton trach-->

																		</div>
																	</td>
																</tr>

																<div id="modal_delete{{ evenement.id }}" class="modal fade" tabindex="-1">
																	<div class="modal-dialog">
																		<div class="modal-content">
																			<div class="modal-header bg-danger">
																				<h4 class="modal-title">
																					Confirmez-vous la suppression du produit {{ ficheTechnique.produit.intitule }}
																					de la {{ ficheTechnique.id }}
																					?
																				</h4>
																				<button type="button" class="close" data-dismiss="modal">
																					&times;

																				</button>
																			</div>

																			<div class="modal-body">
																				<p>
																					<h5>Voulez vous supprimer le produit {{ficheTechnique.produit.intitule}}?</h5>
																				</p><br><h6>si vous confirmez, votre produit sera effacé</h6>
																			</div>

																			<div class="modal-footer">
																				<button type="button" class="btn btn-link" data-dismiss="modal">
																					Fermer

																				</button>
																				<a type="button" class="btn bg-danger" href="{{ path("app_fiche_technique_delete" , {id: ficheTechnique.id}) }}">
																					Valider

																				</a>
																			</div>
																		</div>
																	</div>
																</div>
															{% endfor %}
															<!--modal_ajout_produit-->
													<div id="modal_ajout_produit" class="modal fade" tabindex="-1">
													<div class="modal-dialog">
														<div class="modal-content">
															<div class="modal-header bg-primary">
																<h4 class="modal-title">
																	<label class="d-block font-weight-semibold">Vous allez ajouter un produit au fiche technique</label>
																</h4>

																<button type="button" class="close" data-dismiss="modal">
																	&times;
																</button>
															</div> {{ form_start(formfichetechnique) }}

															<div class="modal-body">
																<div class="row">

																	<div class="col-md-6">
																		<div class="form-group">
																			<label>Produit
																				<span class="text-danger"></span>
																			</label> {{ form_widget(formfichetechnique.produit, {attr:{'class':'form-control form-control-select2'}}) }}
																		</div>
																	</div>
																	<div class="col-md-6">
																		<div class="form-group">
																			<label>Quantite
																				<span class="text-danger"></span>
																			</label> {{ form_widget(formfichetechnique.quantite, {attr:{'class':'form-control'}}) }}
																		</div>
																	</div>
																</div>
																<div class="row">

																	<div class="col-md-6">
																		<div class="form-group">
																			<label>Unite
																				<span class="text-danger"></span>
																			</label> {{ form_widget(formfichetechnique.unite, {attr:{'class':'form-control form-control-select2'}}) }}
																		</div>
																	</div>
																</div>

															</div>
															<div class="modal-footer">
																<div class="text-right"> {{ form_row(formfichetechnique.Enregistrer , {attr:{'class':'btn btn-primary'}}) }}
																</div>
															</div> {{ form_end(formfichetechnique) }}
														</div>
													</div>
													<!--/modal_ajout_benificiaire-->
												</div>
														</tbody>

													</table>
													
														<div class="text-right"> {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary'}}) }} {{ form_end(form) }}
														</div>
											
												</fieldset>
											</div>
										</div>
										<!-- /left content -->
									</div>
									<!-- /inner container -->
								</div>
								<!-- Content area -->

								<div class="content"></div>
								<!-- /content area -->
							</div>

						</div>

					</div>
				</div>
			</div>
		</div>
	{% endblock %}
