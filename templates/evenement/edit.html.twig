{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{ path('evenement_index') }}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des événements
						</a>
						<a href="#" class="breadcrumb-item">
							Modification de l'événement 
						</a>

					</div>
				</div>
			</div>
		</div>
		<!-- /page header -->
		<div class="grix xs4 container">
			<div class="col-xs4">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="col-12">
					<div class="col-xs4">
						<div class="content-wrapper">

							<div
								class="content">

								<!-- Inner container -->
								<div
									class="d-flex align-items-start flex-column flex-md-row">
									<!-- Left content -->
									<div class="tab-content w-100 overflow-auto order-2 order-md-1">
										<div
											class="tab-pane fade active show" id="settings">
											<!-- Profile info -->
											<div class="card">
												<div class="card-header bg-white header-elements-inline">
													<h6 class="card-title">Modifier l'événement {{evenement.nom}}</h6>
													<div class="header-elements"></div>
												</div>
												<div class="card-body">{{ form_start(form) }}

													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Nom
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.nom , {attr:{'class':'form-control','placeholder':'Nom'}}) }}
															</div>
														</div>

														<div class="col-md-6">
															<div class="form-group">
																<label>Type d'événement
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.typeEvenement , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>Date début<span class="text-danger">*</span>
																</label> {{ form_widget(form.datedebut , {attr:{'class':'form-control'}}) }}
															</div>
														</div>

														<div class="col-md-6">
															<div class="form-group">
																<label>Date fin
																	<span class="text-danger">*</span>
																</label> {{ form_widget(form.datefin , {attr:{'class':'form-control'}}) }}
															</div>
														</div>
													</div>
													
													<div class="row">
														<div class="col-md-6">
															<div class="form-group">
																<label>le montant pour chaque bénéficiaire
																	<span class="text-danger"></span>
																</label> {{ form_widget(form.prixUnitaire , {attr:{'class':'form-control '}}) }}
															</div>
														</div>
														<div class="col-md-6 d-none" id="champ_caisse">
															<div class="form-group">
																<label>Caisse
																	<span class="text-danger"></span>
																</label> {{ form_widget(form.caisse , {attr:{'class':'form-control form-control-select2'}}) }}
															</div>
														</div>
													</div>
													<div class="text-right"> {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary'}}) }} {{ form_end(form) }}
													</div>
												</div>
											</div>
										</div>
										<!-- /left content -->
									</div>
									<!-- /inner container -->
								</div>
								<!-- Content area -->

								<div class="content"></div>
								<!-- /content area -->
							</div>

						</div>

					</div>
				</div>
			</div>
		</div>
	{% endblock %}
	{% block javascript %}
	<script type="text/javascript">
		$(document).ready(function () {
		$('#evenement_prixUnitaire').on('change', function (e) {
			if ($(this).val()!= '') {
				$('#champ_caisse').removeClass('d-none');
			}
			else {
				$('#champ_caisse').addClass('d-none');
			}
			});
		});
	</script>
	{% endblock %}