{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
					<a href="{{ path('evenement_index') }}" class="breadcrumb-item">
						<i class="icon-home2 mr-2"></i>
						Liste des événements
					</a>
			</div>
		</div>
		<!-- /page header -->

		<!-- Content area -->
		<div
			class="content">

			<!-- Basic datatable -->
			<div class="card">

				<div class="card-header header-elements-inline">

					<h4 class="card-title">
					La fiche technique de l'événement :
						{{ evenement.nom }}
					</h4>

					<div class="title-left">
						<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" data-target="#modal_ajout_produit" data-toggle="modal">
							<b>
								<i class="icon-reading"></i>
							</b>
							Ajouter un nouveau produit
						</a>
					</div>
				</div>


				<div class="row">


					
				<div class="card-header header-elements-inline">
						<div class="for-group">


							<div class="d-flex align-items-center">
								<i class="icon-calendar mr-2 icon-4x"></i>
								<div class="font-weight-black ">Type d'evenement :</div>

								<samp class="font-size-lg">{{ evenement.typeEvenement}}</samp>
							</div>

							<br>
							<div class="d-flex align-items-center">
								<i class="icon-calendar2 mr-2 icon-4x"></i>
								<div class="font-weight-black">Date debut d'evenement :
								</div>
								<samp class="font-size-lg">{{ evenement.datedebut ? evenement.datedebut|date('Y-m-d') : '' }}</samp>

							</div>
							<br>
							<div class="d-flex align-items-center">
								<i class="icon-calendar2 mr-2 icon-4x"></i>
								<div class="font-weight-black">Date fin d'evenement :
								</div>
								<samp class="font-size-lg">{{ evenement.datefin ? evenement.datefin|date('Y-m-d') : '' }}</samp>

							</div>
							<br>
								<div class="d-flex align-items-center">
									<i class="icon-cart5 mr-2 icon-4x"></i>
									<div class="font-weight-black">  Nombre des paniers finale :
									</div>
									<samp class="font-size-lg">{{ nbpanierfinale}}</samp>
	
								</div>


						</div>
					</div>

				</div>


					
					<table class="table datatable-basic">

						<thead>
							<tr>
								<th>
									Id

								</th>
								<th>
									produit
								</th>
								<th>
									Quantité
								</th>
								<th>
									Unite
								</th>
								<th>
									Nombre panier
								</th>
								<th>
									Actions

								</th>
							</tr>
						</thead>
						<tbody>
							{% for ficheTechnique in ficheTechniques %}
								<tr>

									<td> {{ ficheTechnique.id }}
									</td>
									<td> {{ ficheTechnique.produit.intitule }}
									</td>

									<td> {{ ficheTechnique.quantite }}
									</td>
									<td> {{ ficheTechnique.unite }}
									</td>
									<td> {{ ficheTechnique.nbstockproduit }}
									</td>
									<td>
										<div
											class="list-icons">
											<!--bouton trach-->
											<a href="#" class="list-icons-item text-danger-600" data-target="#modal_delete{{ ficheTechnique.id }}" data-toggle="modal">
												<i class="icon-trash"></i>
											</a>
											<!--/bouton trach-->

										</div>
									</td>
								</tr>

								<div id="modal_delete{{ evenement.id }}" class="modal fade" tabindex="-1">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header bg-danger">
												<h4 class="modal-title">
													Confirmez-vous la suppression du produit 
													de la
													?
												</h4>
												<button type="button" class="close" data-dismiss="modal">
													&times;

												</button>
											</div>

											<div class="modal-body">
												<p>
													<h5>Voulez vous supprimer le produit ?</h5>
												</p><br><h6>si vous confirmez, votre produit sera effacé</h6>
											</div>

											<div class="modal-footer">
												<button type="button" class="btn btn-link" data-dismiss="modal">
													Fermer

												</button>
												<a type="button" class="btn bg-danger" href="{{ path("app_fiche_technique_delete" , {id: evenement.id}) }}">
													Valider

												</a>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
							<!--modal_ajout_produit-->
							<div id="modal_ajout_produit" class="modal fade" tabindex="-1">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header bg-primary">
											<h4 class="modal-title">
												<label class="d-block font-weight-semibold">Vous allez ajouter un produit au fiche technique</label>
											</h4>

											<button type="button" class="close" data-dismiss="modal">
												&times;
											</button>
										</div> {{ form_start(formfichetechnique) }}

										<div class="modal-body">
											<div class="row">

												<div class="col-md-6">
													<div class="form-group">
														<label>Produit
															<span class="text-danger"></span>
														</label> {{ form_widget(formfichetechnique.produit, {attr:{'class':'form-control form-control-select2'}}) }}
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label>Quantite
															<span class="text-danger"></span>
														</label> {{ form_widget(formfichetechnique.quantite, {attr:{'class':'form-control'}}) }}
													</div>
												</div>
											</div>
											<div class="row">

												<div class="col-md-6">
													<div class="form-group">
														<label>Unite
															<span class="text-danger"></span>
														</label> {{ form_widget(formfichetechnique.unite, {attr:{'class':'form-control form-control-select2'}}) }}
													</div>
												</div>
											</div>

										</div>
										<div class="modal-footer">
											<div class="text-right"> {{ form_row(formfichetechnique.Enregistrer , {attr:{'class':'btn btn-primary'}}) }}
											</div>
										</div> {{ form_end(formfichetechnique) }}
									</div>
								</div>
								<!--/modal_ajout_benificiaire-->
							</div>
						</tbody>

					</table>
