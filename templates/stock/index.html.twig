
{% extends 'base.html.twig' %}
{% block body %}
	<!-- Main content -->
	<div
		class="content-wrapper">

		<!-- Page header -->
		<div class="page-header page-header-light">
			<div class="page-header-content header-elements-md-inline">
				<div class="d-flex">
					<div class="breadcrumb">
						<a href="{{path('stock_index')}}" class="breadcrumb-item">
							<i class="icon-home2 mr-2"></i>
							Liste des stocks</a>

					</div>

					<a href="#" class="header-elements-toggle text-default d-md-none">
						<i class="icon-more"></i>
					</a>
				</div>


			</div>
		</div>
		<!-- /page header -->


		<!-- Content area -->
		<div
			class="content">

			<!-- Basic datatable -->
			<div class="card">
				<div class="card-header header-elements-inline">
					<h5 class="card-title">Liste des stocks</h5>
					<div class="card-title-left">
						<a type="button" class="btn bg-teal-400 btn-labeled btn-labeled-left" href="{{path('stock_new')}}">
							<b>
								<i class="icon-reading"></i>
							</b>
							Ajouter un nouveau stock</a>
					</div>

				</div>

				<table class="table datatable-basic">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Quantite</th>
                        <th>Nom</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for stock in stocks %}
                    <tr>
                        <td>{{ stock.id }}</td>
                        <td>{{ stock.quantite }}</td>
                        <td>{{ stock.nom }}</td>
							
                            <td>

								<a class="list-icons-item text-primary-600" href="{{ path('stock_edit', {'id': stock.id}) }}">
									<i class="icon-pencil7"></i>
								</a>
								<a href="#" data-target="#modal_delete{{stock.id}}" data-toggle="modal" data-id={{stock.id}} class="list-icons-item text-danger-600">
									<i class="icon-trash"></i>
								</a>
								<a href="{{ path('stock_show', {'id': stock.id}) }}" class="list-icons-item text-teal-600">
									<i class="icon-reading"></i>
								</a>
								<div id="modal_delete{{stock.id}}" class="modal fade" tabindex="-1">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header bg-danger">
												<h6 class="modal-title">Supprimer le type de produit {{stock.id}}</h6>
												<button type="button" class="close" data-dismiss="modal">&times;</button>
											</div>

											<div class="modal-body">
												<p>Êtes-vous sûr de vouloir supprimer ?</p>
											</div>

											<div class="modal-footer">
												<button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
												<a type="button" class="btn bg-danger" href="{{path("stock_delete" , {id: stock.id})}}">Valider</a>
											</div>
										</div>
									</div>
								</div>
							</td>
						<td ></td>	
                        <td class="text-center"></td>
						</tr>

					{% endfor %}
				</tbody>
			</table>
			<!-- /basic datatable -->
		</div>

	</div>
</div>{% endblock %}
